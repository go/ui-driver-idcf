<section class="horizontal-form">
  <div class="container-fluid">
    {{!-- This partial contains the quantity, name, and description fields --}}
    {{partial "host/add-common"}}

    <div class="over-hr r-mt20 r-mb20">
      <span>アカウントアクセス</span>
    </div>

    {{!-- An example input option --}}
    <div class="row form-group">
      <div class="col-md-2 form-label">
        <label class="form-control-static">リージョン</label>
      </div>
      <div class="col-md-10">
        {{new-select
          classNames="form-control"
          content=apiUrlChoices
          optionLabelPath='displayName'
          optionValuePath='url'
          value=model.%%DRIVERNAME%%Config.apiUrl
        }}
      </div>
    </div>

    <div class="row form-group">
      <div class="col-md-2 form-label">
        <label class="form-control-static">ゾーン</label>
      </div>
      <div class="col-md-10">
        <select class="form-control" onchange={{action (mut model.%%DRIVERNAME%%Config.zone) value="target.value"}}>
          {{#each zoneChoices as |choice|}}
            <option value={{choice}} selected={{eq model.%%DRIVERNAME%%Config.zone choice}}>{{choice}}</option>
          {{/each}}
        </select>

      </div>
    </div>

    <div class="row form-group">
      <div class="col-md-2 form-label">
        <label class="form-control-static">API キー*</label>
      </div>
      <div class="col-md-10">
        {{input type="text"
          class="form-control"
          value=model.%%DRIVERNAME%%Config.apiKey
          placeholder="API キーを入力してください"
        }}
      </div>
    </div>

    <div class="row form-group">
      <div class="col-md-2 form-label">
        <label class="form-control-static">秘密キー*</label>
      </div>
      <div class="col-md-10">
        {{input type="password"
          class="form-control"
          value=model.%%DRIVERNAME%%Config.secretKey
          placeholder="秘密キーを入力してください"
        }}
      </div>
    </div>

    <div class="over-hr r-mt20 r-mb20">
      <span>インスタンス</span>
    </div>

    <div class="row form-group">
      <div class="col-md-2 form-label">
        <label class="form-control-static">テンプレート</label>
      </div>
      <div class="col-md-4">
        {{input type="text" value=model.%%DRIVERNAME%%Config.template classNames="form-control" placeholder='テンプレート名を入力してください'}}
      </div>
      <div class="col-md-2 form-label">
        <label class="form-control-static">サービスオファリング</label>
      </div>
      <div class="col-md-4">
        <select class="form-control" onchange={{action (mut model.%%DRIVERNAME%%Config.serviceOffering) value="target.value"}}>
          {{#each offeringChoices as |choice|}}
            <option value={{choice}} selected={{eq model.%%DRIVERNAME%%Config.serviceOffering choice}}>{{choice}}</option>
          {{/each}}
        </select>
      </div>
    </div>

    <div class="over-hr r-mt20 r-mb20">
      <span>オプション</span>
    </div>

    <table style="margin: 0 auto;">
        <tr>
          <td style="padding: 0 10px;">
            <div class="form-label checkbox">
              <label>{{input type="checkbox" checked=model.%%DRIVERNAME%%Config.expunge}} Expunge</label>
            </div>
          </td>
        </tr>
      </table>

  {{!-- This partial contains the Labels and Advanced Options fields --}}
  {{partial "host/add-options"}}

  {{!-- This component shows the Create and Cancel buttons --}}
  {{save-cancel save="save" cancel="cancel"}}

  </div>

  {{!-- This component shows errors produced by validate() in the component --}}
  {{top-errors errors=errors}}

</section>
